# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Default path will just redirect to the computer list
GET     /                           controllers.HomeController.landing(request: Request)
GET     /administrator              controllers.HomeController.administrator(request: Request)
GET     /authapproval               controllers.HomeController.authapproval(request: Request)
GET     /canteen                    controllers.HomeController.canteen(request: Request)
GET     /home                       controllers.HomeController.home(request: Request)
GET     /login                      controllers.HomeController.login(request: Request)
#POST    /login                      controllers.Application.authenticate()
GET     /managemenus                controllers.HomeController.managemenus(request: Request)
GET     /managetickets              controllers.HomeController.managetickets(request: Request)
GET     /profile                    controllers.HomeController.profile(request: Request)
GET     /recoverpassword            controllers.HomeController.recoverpassword(request: Request)
GET     /signup                     controllers.HomeController.signup(request: Request)
GET     /tickets                    controllers.HomeController.tickets(request: Request)
GET     /userslist                  controllers.HomeController.userslist(request: Request)
GET     /wallet                     controllers.HomeController.wallet(request: Request)

#GET     /login                      controllers.Application.login()
#GET     /logout                     controllers.Application.logout()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#GET     /assets/javascripts/routes          controllers.Application.javascriptRoutes()

## Import Secure routes
#*      /                module:secure